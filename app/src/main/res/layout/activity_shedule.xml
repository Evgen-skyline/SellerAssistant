<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright">



    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:mcv_showOtherDates="all"
        android:layout_gravity="center"
        android:id="@+id/mMaterialCalendar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/mSheduleActivityDetails"
            style="@style/CustomButtonStyle"
            android:layout_marginTop="20sp"
            android:text="@string/mButtonDetails"
            android:textSize="15sp"
            android:onClick="clickForDetails"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/mSheduleActivitySetWorkDay"
            style="@style/CustomButtonStyle"
            android:layout_marginTop="20sp"
            android:text="@string/mButtonSetWorkDay"
            android:textSize="15sp"
            android:onClick="clickSetWorkDay"/>

    </LinearLayout>
</LinearLayout>