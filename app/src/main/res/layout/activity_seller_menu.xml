<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOnSellerMenu"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:background="@drawable/listview_style"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddDayResults"
        android:textSize="20sp"
        android:text="@string/mButtonDayResults"
        android:layout_weight="0.2"
        android:onClick="clickAddDayResult"
        android:background="@drawable/my_button_style"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonZpForMonth"
        android:textSize="20sp"
        android:text="@string/mButtonZpForMonth"
        android:layout_weight="0.2"
        android:onClick="clickReportForMonth"
        android:background="@drawable/my_button_style"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDayEdit"
        android:textSize="20sp"
        android:text="@string/mButtonDayEdit"
        android:layout_weight="0.2"
        android:onClick="sellerMenuClickDayChange"
        android:background="@drawable/my_button_style"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mSellerMenuScheduleButton"
        android:textSize="20sp"
        android:text="@string/mButtonShedule"
        android:layout_weight="0.2"
        android:background="@drawable/my_button_style"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"
        android:onClick="clickForShedule"/>
</LinearLayout>
