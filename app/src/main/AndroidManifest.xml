<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="evgenskyline.sellerassistant"
    android:versionCode="3"
    android:versionName="1.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_user"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SellerMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DayEdit"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivityPF"
            android:label="@string/title_activity_settings_activity_pf"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReportActivity"
            android:label="@string/title_activity_report"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DayChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".exchangerates.ExchangeRates"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SheduleActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>